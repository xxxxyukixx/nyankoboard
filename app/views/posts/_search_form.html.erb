<div class="max-w-2xl mx-auto">
  <%= search_form_for @q do |f| %>
    <div class="flex gap-2 items-center">
      <%= f.search_field :content_cont, placeholder: "キーワードを入力",
      class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500"
      %>
      <%= f.submit "検索",
      class: "bg-rose-300 text-white px-3 py-1.5 text-sm rounded-lg hover:bg-rose-400 transition-colors duration-200 min-w-[60px]"
      %>
    </div>
  <% end %>
</div>