<div class="max-w-7xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-8 pb-2 text-gray-600 border-b-2 border-gray-400">ユーザー一覧</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white rounded-lg overflow-hidden shadow-md">
      <thead class="bg-rose-300 text-white">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-medium">ユーザー名</th>
          <th class="px-6 py-3 text-left text-sm font-medium">メールアドレス</th>
          <th class="px-6 py-3 text-left text-sm font-medium">権限</th>
          <th class="px-6 py-3 text-left text-sm font-medium">操作</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= user.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= user.email %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <%= user.admin? ? "管理者" : "一般ユーザー" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <% unless user == current_user %>
                <%= button_to "削除", 
                    user_path(user), 
                    method: :delete, 
                    data: { confirm: "本当に削除しますか？" },
                    class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition-colors duration-200" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "戻る", 
      posts_path, 
      class: "inline-block mt-4 px-4 py-2 bg-pink-400 text-white rounded-md hover:bg-pink-500 transition-colors duration-200" %>
</div>