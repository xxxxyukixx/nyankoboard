<%# app/views/profiles/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center">
          <span class="text-gray-600 text-2xl"><%= @profile.nickname.first.upcase %></span>
        </div>
        <div>
          <h1 class="text-2xl font-bold"><%= @profile.nickname %></h1>
          <p class="text-gray-600"><%= @profile.description %></p>
        </div>
      </div>
      <% if @profile.user == current_user %>
        <%= link_to "プロフィールを編集", edit_profile_path(@profile), class: "bg-pink-500 text-white px-4 py-2 rounded-lg hover:bg-pink-600" %>
      <% end %>
    </div>
  </div>

  <%# 投稿一覧部分 %>
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">投稿一覧</h2>
    
    <div class="space-y-6">
      <% @profile.user.posts.each do |post| %>
        <div class="border rounded-lg p-6 hover:shadow-md transition-shadow duration-200">
          <div class="flex items-center mb-4">
            <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
              <span class="text-gray-600 text-sm"><%= post.user.profile.nickname.first.upcase %></span>
            </div>
            <span class="ml-3 font-medium text-gray-900"><%= post.user.profile.nickname %></span>
          </div>
          <p class="text-lg text-gray-900"><%= post.content %></p>

          <% if post.image.attached? %>
            <div class="mt-4 grid grid-cols-2 gap-4">
              <%= image_tag post.image, class: "w-full h-48 object-cover rounded-lg" %>
            </div>
          <% end %>

          <div class="mt-4 flex justify-between items-center">
            <span class="text-sm text-gray-500">
              <%= l post.created_at, format: :long %>
            </span>
            <% if post.user == current_user %>
              <%= link_to "削除", post_path(post),
                data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                class: "text-pink-500 hover:text-pink-600" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>